<html>
  <head>
    <title>Movie Database</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
  </head>
  <body>
    <!-- menu bar -->
    <div class="ui fixed inverted menu">
      <div class="ui container">
        <div class="header item"><i class="film icon"></i>Movie Database</div>
        <a href="/" class="item">Home</a>
        <% if(currentUser) { %>
          <a href="/movies/new" class="item">New Movie</a>
        <% } %>
      </div>
      <div class="right menu">
        <% if(!currentUser) { %>
        <a href="/register" class="item">Login</a>
        <% } else { %>
        <a href="" class="item"><i class="address card icon"></i><%= currentUser.name %></a>
        <a href="/logout" class="item">Logout</a>
        <% } %>
      </div>
    </div>
    <% if(error && error.length > 0) { %>
      <div class="ui message flash negative">
        <%= error %>
      </div>
    <% } %>
    <% if(success && success.length > 0) { %>
      <div class="ui message flash positive">
        <%= success %>
      </div>
    <% } %>
